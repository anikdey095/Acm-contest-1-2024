#include<bits/stdc++.h>
using namespace std;

int main()
{
    int c;
    cin >> c;
    while(c--) {
        string arr;
        cin >> arr;

        int len = arr.size();
       if(len>10){
        cout <<arr[0]<< len-2<<arr[len-1] << endl;
    }
    else{
        cout<<arr<<endl;
    }
    }
    return 0;

}
